type DIDDocument = record {
    id: text;
    verification_method: vec VerificationMethod;
};

type VerificationMethod = record {
    id: text;
    type_: text;
    public_key_base58: text;
};

service : {
    store_did_document: (DIDDocument) -> ();     // Stores the DID document
    get_did_document: (text) -> (DIDDocument);   // Fetches the DID document by DID
}